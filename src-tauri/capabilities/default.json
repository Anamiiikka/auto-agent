{
  "identifier": "default",
  "description": "Default capability for auto-agent",
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "fs:allow-read-text-file",
      "allow": ["$APP/.env"]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": ["$APP/.env"]
    },
    {
      "identifier": "fs:allow-appdata-read",
      "allow": ["$APP/*"]
    },
    {
      "identifier": "fs:allow-appdata-write",
      "allow": ["$APP/*"]
    },
    {
      "identifier": "core:path:allow-resolve-directory",
      "allow": ["$APP"]
    }
  ]
}